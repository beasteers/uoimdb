{% extends 'base.j2' %}

{% block nav %}{% endblock %}


{% block content %}
<div class='card card-panel solo-card bg-highlight'>

<form method='POST'>
	<h1>{{ config.APP_TITLE }}</h1>
  <div class="form-group">
    <label for="userid">Username</label>
    <input type="text" class="form-control bg-highlight" id="userid" name='userid' placeholder="Your username">
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input type="password" class="form-control bg-highlight" id="password" name='password' placeholder="Your password">
  </div>
  <button type="submit" class="btn btn-black">Submit</button>
</form>

</div>
{% endblock %}

{% block scripts %}{% endblock %}

